<?php

class Errors extends Processor
{

    public function __construct()
    { }

    public function error_403()
    {
        $this->render('resources/pages/errors/403');
    }

    public function error_404()
    {
        $this->render('resources/pages/errors/404');
    }

    public function error_500()
    {
        $this->render('resources/pages/errors/500');
    }
}