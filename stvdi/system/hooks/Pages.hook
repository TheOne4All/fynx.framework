<?php

class Pages extends Processor
{

    public function __construct()
    { }

    public function landing($greetings = '')
    {
        $welcomeTbl = $this->loadTable('Welcome_tbl');
        if ($greetings != '') {
            $welcomeTbl->greetings = $greetings;
        }
        $this->render('resources/pages/landing', ['greetings' => $welcomeTbl->greetings, 'name' => $welcomeTbl->name]);
    }
}