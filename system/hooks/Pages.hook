<?php 

    class Pages extends Processor {
 
        public function __construct() {

        }

        public function index($greetings = '') {
            $welcomeTbl = $this->loadTable('Welcome_tbl'); 
            if ($greetings != ''){
                $welcomeTbl->greetings = $greetings;
            }          
            $this->render('layouts/pages/index', ['greetings' => $welcomeTbl->greetings, 'name' => $welcomeTbl->name]);
        }

    }
?>